<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="drogenidesoftwares.drogenideschool.schedule.ClassDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Schedule: Monday"
            android:gravity="center"
            android:background="@drawable/bordered_blue"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_marginTop="40dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:gravity="center"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <TextView
                android:text="Sr. No"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
            <TextView
                android:text="Subject"
                android:padding="5dp" />
            <TextView
                android:text="Time"
                android:padding="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="1"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
            <TextView
                android:text="Mathematics"
                android:padding="5dp" />
            <TextView
                android:text="10 AM-11 PM"
                android:padding="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="2"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
            <TextView
                android:text="Marathi"
                android:padding="5dp" />
            <TextView
                android:text="11 AM-12:30 PM"
                android:padding="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="3"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
            <TextView
                android:text="Lunch Break"
                android:padding="5dp" />
            <TextView
                android:text="12:30 PM-1:30 PM"
                android:padding="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="4"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
            <TextView
                android:text="Hindi"
                android:padding="5dp" />
            <TextView
                android:text="1:30 PM-2:30 PM"
                android:padding="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="5"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
            <TextView
                android:text="History"
                android:padding="5dp" />
            <TextView
                android:text="2:30 PM - 4 PM"
                android:padding="5dp" />

        </TableRow>


    </TableLayout>
</LinearLayout>
