<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/marks_carview"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exam :"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv5"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="II Semester"
                        android:layout_toRightOf="@+id/tv5"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/exam_title" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail....."
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/detail"
                        android:layout_below="@+id/exam_title"
                        android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/tf_marks_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/exam_title"
                android:layout_gravity="end"
                android:gravity="end"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:text="Date: 21/02/2018" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>