<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewFontStyle">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SubFrameLayoutWeight1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#21458f</item>
    </style>

    <style name="HeadingNavFontStyle">
        <item name="android:fontFamily">Showcard Gothic</item>
    </style>

    <!-- Customize Text View with Margin Screen Style -->
    <style name="NormalFontAndSize.MarginLeft40">
        <item name="android:layout_marginLeft">35dp</item>

    </style>

    <style name="NormalFontAndSize.MarginLeft170">
        <item name="android:layout_marginLeft">230dp</item>
    </style>

    <style name="NormalFontAndSize">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <!-- Customize Spinner Style -->

    <style name="FinalSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:divider">#fff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/spineerselector</item>

    </style>


    <!-- Customize Edit Text Style -->

    <style name="EditTextMultiline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@drawable/backsqforqueries</item>
    </style>


    <style name="TextFont">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
